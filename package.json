{
	"name": "allitebooks-downloader",
	"version": "1.0.0",
	"description": "Scrapes and downloads all IT eBooks from allitebooks.com",
	"main": "main.js",
	"scripts": {
		"start": "node --experimental-modules main.js",
		"test": "jest --coverage --verbose",
		"clean": "rm -R ./data/*"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/thomasbrueggemann/allitebooks-downloader.git"
	},
	"keywords": [
		"allitebooks",
		"ebooks",
		"scraper"
	],
	"author": "Thomas Br√ºggemann",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/thomasbrueggemann/allitebooks-downloader/issues"
	},
	"homepage": "https://github.com/thomasbrueggemann/allitebooks-downloader#readme",
	"prettier": {
		"printWidth": 100,
		"useTabs": true,
		"tabWidth": 4,
		"arrowParens": "always"
	},
	"dependencies": {
		"await-fs": "^1.0.0",
		"cheerio": "^1.0.0-rc.2",
		"download": "^6.2.5",
		"make-dir": "^1.2.0",
		"progress": "^2.0.0",
		"request": "^2.83.0",
		"request-promise-native": "^1.0.5"
	},
	"devDependencies": {
		"jest": "^22.4.2"
	},
	"jest": {
		"collectCoverageFrom": [
			"*.js",
			"!tests/**/*.test.js",
			"!main.js"
		],
		"coverageThreshold": {
			"global": {
				"statements": 80,
				"branches": 80,
				"functions": 80,
				"lines": 80
			}
		},
		"moduleDirectories": [
			"node_modules"
		],
		"testRegex": "tests/.*\\.test\\.js$"
	}
}
